{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "noEmitHelpers": false,
        "outDir": "./dist",
        "experimentalDecorators": true,
        "lib": [
            "es7",
            "es6",
            "es5",
            "dom",
            "es2015.promise",
            "es2015.generator"
        ],
        "paths": {
            "@vessel/core": [
                "./node_modules/vesseljs/core/"
            ],
            "@vessel/decorators": [
                "./node_modules/vesseljs/decorators/"
            ],
            "@vessel/dom": [
                "./node_modules/vesseljs/dom/"
            ],
            "@vessel/router": [
                "./node_modules/vesseljs/router"
            ],
            "@vessel/vessel-cli": [
                "./node_modules/vesseljs/vessel-cli"
            ],
            "@vessel/types/*": [
                "./node_modules/vesseljs/types"
            ]
        }
    }
}

